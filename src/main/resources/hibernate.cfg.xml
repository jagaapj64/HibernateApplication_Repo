<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC 
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/java_hibernate</property>
		<property name="connection.username">postgres</property>
		<property name="hibernate.show_sql">true</property>
		<property name="connection.pool_size">1</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="hibernate.format_sql">true</property>
		<property name="connection.password">root</property>
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<mapping resource="users.hbm.xml"></mapping>
		<mapping resource="course.hbm.xml"></mapping>
		<mapping resource="oldstudent.hbm.xml"></mapping>
		<mapping resource="newstudent.hbm.xml"></mapping>
		<mapping resource="employee.hbm.xml"></mapping>
		<mapping resource="actor.hbm.xml"></mapping>
		<mapping resource="movies.hbm.xml"></mapping>
		<mapping resource="actor_01.hbm.xml"></mapping>
		<mapping resource="movies_01.hbm.xml"></mapping>
		<mapping resource="voter.hbm.xml"></mapping>
		<mapping resource="vote.hbm.xml"></mapping>
		<mapping resource="faculty.hbm.xml"></mapping>
		<mapping resource="courses.hbm.xml"></mapping>
		<mapping resource="student.hbm.xml"></mapping>
	</session-factory>
</hibernate-configuration>